module Font :> sig
  type t = string * float * float
  val persistent ~make : string -> float -> float -> font
  val persistent ~font-name : font -> string
  val persistent ~ratio : font -> float
  val persistent ~baseline : font -> float
end = struct
  type t = string * float * float
  val persistent ~make fn rt bl = (fn, rt, bl)
  val persistent ~font-name (fn, _, _) = fn
  val persistent ~ratio (_, rt, _) = rt
  val persistent ~baseline (_, _, bl) = bl
end
