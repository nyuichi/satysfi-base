use Option
use DeriveAst
use DeriveConfig
use DeriveLine

module TypesetDerive :> sig

    val \proven : math [?(config : DeriveConfig.t) DeriveAst.t]

end = struct

    val math ctx \proven ?(config = config) ast =
      let open DeriveRender in
      render-math ctx (config |> Option.unwrap-or DeriveConfig.default) ast

end
